<html>
    <head>
        <title>Create Product</title>
       <link href="/css/Admin_Style.css" rel="stylesheet" type"text/css">
         
    </head>
    <body>
          <br>
        <br>
       <hr>
        <div>
         <a href="/products/all"><button class="home">Home</button></a>
       
       
        
        </div>
        <hr>
       <br>
       
       
        <div id="transparentbox3">
             <h2 style="font-size:42px; color:white;"><u>Add New Product</u></h2>
        <div>Name:
            <input type="text" id="name"/>
        </div> <br>
        <div>Type:
         <select class="dropbox">
              <option value="mobile">Mobile</option>
              <option value="Laptop/Computer">Laptop/Computer</option>
              <option value="Gaming">Gaming</option>
        
        </select> 
            
        </div> <br>
        <div>Brand:
            <input type="text" id="brand"/>
        </div> <br>
        <div>Description:
            <textarea rows="4" cols="40" id="description"></textarea>
        </div> <br>
        <div>Price:
            <input type="number" id="price"/>
        </div> <br>
        <div>Quantity:
            <input type="number" id="quantity"/>
        </div> <br>
        <div>Image URL:
            <input type="text" id="image"/>
        </div> <br>
        
        <div id="error"></div>
        
        <button id="submit" class="btn-login">Submit</button>
        </div>
        <script src="/lib/jquery/dist/jquery.min.js"></script>
        <script>
            var product = {title: "", content: ""};
            $("#name").change(function(){
                product.name = $("#name").val();
            });
            
            $("#type").change(function(){
                product.type = $("#type").val();
            });
            
            $("#brand").change(function(){
                product.brand = $("#brand").val();
            });
            
            $("#description").change(function(){
                product.description = $("#description").val();
            });
            
            $("#price").change(function(){
                product.price = $("#price").val();
            });
            
            $("#quantity").change(function(){
                product.quantity = $("#quantity").val();
            });
            
            $("#image").change(function(){
                product.imageURL = $("#image").val();
            });
            
            
            
            $("#submit").click(function(){
                console.log(product);
                $.ajax({
                    method: "POST",
                    url: "/api/products",
                    data: product
                }).done(function(response){
                    console.log(response);
                    window.location.replace("/products/"+response._id);
                }).fail(function(response){
                    $("#error").text(JSON.parse(response.responseText).message);
                    console.log(JSON.parse(response.responseText).message); 
                });
            });
        </script>
    </body>
</html>